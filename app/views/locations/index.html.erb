        html, body, #map-canvas {
            height: 100%;
            margin: 0;
            padding: 0;
        }
        .loc-title {
          font-size: 20px;
          color: #385273;
        }
        .loc-des {
          padding:5px;
          font-size: 14px;
          color: #385273;
          white-space: pre-wrap;
          white-space: -moz-pre-wrap;
          white-space: -pre-wrap;
          white-space: -o-pre-wrap;
          word-wrap: break-word;
          text-align: justify;
        }

    </style>
    <div id="map-canvas"></div>
    <script type="text/javascript" src="https://maps.googleapis.com/maps/api/js"></script>
    <script type="text/javascript">
      function initialize() {
        var mapStyle = [{
            stylers: [{
                visibility: "off"
            }]
        }, {
            featureType: "water",
            stylers: [{
                visibility: "on"
            }, {
                color: "#385273"
            }]
        }, {
            featureType: "landscape",
            stylers: [{
                visibility: "on"
            }, {
                color: "#FAECC7"
            }]
        }, {
            featureType: "administrative",
            elementType: "geometry.stroke",
            stylers: [{
                visibility: "on"
            }, {
                color: "#FAECC7"
            }, {
                weight: 1
            }]
        }];

        var mapOptions = {
            disableDefaultUI: true,
            center: {
                lat: 0,
                lng: 20
            },
            zoom: 3

        };
        var map = new google.maps.Map(document.getElementById('map-canvas'), mapOptions);

        map.setOptions({
            styles: mapStyle
        });

        var locations = <%= raw @markers.to_json(except: :infowindow) %>

        for (i = 0; i < locations.length; i++) {
            var marker = new google.maps.Marker({
                position: new google.maps.LatLng(locations[i].lat, locations[i].lng),
                map: map,
                icon: "http://img11.hostingpics.net/pics/222730faviconempower.png"
            });

            (function(marker, i) {
              google.maps.event.addListener(marker, 'click', function() {
                infowindow = new google.maps.InfoWindow({
                  content: "<div><h1 class='loc-title'>" + locations[i].name + "</h1><img src='" + locations[i].picture_url + "' style='max-width: 300px'/><div class='loc-des'>" + locations[i].description + "</div>" + "<a href='" + locations[i].link + "' target='_blank'><em>" + "En savoir plus" + "</em></a></div>",
                });
                infowindow.open(map, marker);
              });
            })(marker, i);
        };
        markerCluster.clearMarkers();
      }

      google.maps.event.addDomListener(window, 'load', initialize);
    </script>
  </div>
